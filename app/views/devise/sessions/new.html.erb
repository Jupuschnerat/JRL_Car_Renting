<div class="container">
  <h2 class="text-start mb-5 p-1">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row justify-content-start">
    <div class="col-7">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>
  </div>
  <div class="row justify-content-start">
    <div class="col-7">
      <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
    </div>
  <div class="row justify-content-start">
    <div class="col-7">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

  <!-- <div class="form-actions text-start py-2 btn btn-primary border">
    <%= f.button :submit, "Log in" %>
  </div> -->
  <%= f.submit "Log in", class: "btn btn-primary light-drop-shadow" %>
<% end %>

<%= render "devise/shared/links" %>
</div>

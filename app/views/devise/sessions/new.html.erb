<div class="container form border border-dark p-5 my-5 align-items-center">
  <h2 class="p-1 mb-5">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs row justify-content-center">
    <div class="col-7">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>
    <div class="row justify-content-center">
      <div class="col-5">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-5">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
  </div>

  <div class="form-actions text-center py-2 btn btn-primary border">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

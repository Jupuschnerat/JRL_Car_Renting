<%= simple_form_for([car, booking]) do |f| %>
  <%= f.input :start_date,
              {as: :string,
              input_html: {data: {controller:"datepicker", booking_calculus_target: 'startDate', action: 'change->booking-calculus#calculate'}}} %>
  <%= f.input :end_date,
              as: :string,
              input_html: {data: {controller:"datepicker", booking_calculus_target: 'endDate', action: 'change->booking-calculus#calculate'}}  %>
  <div>
    <div class="d-flex justify-content-between">
      <p>Price per day</p>
      <p data-booking-calculus-target='price'>$<%= @car.price %></p>
    </div>
    <div class="d-flex justify-content-between">
      <p>Days rented</p>
      <p data-booking-calculus-target='daysRented'><%= "--" %></p>
    </div>
    <div class="d-flex justify-content-between">
      <p>Order total</p>
      <p data-booking-calculus-target='orderTotal'><%= "--" %></p>
    </div>
  </div>
  <%= f.submit %>
<% end %>


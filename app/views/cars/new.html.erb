<div class="container formcar border border-dark m-5 p-5">
  <h2 class="p-1 mb-5"><strong>About your car:</strong></h2>
  <%= simple_form_for [@car] do |f| %>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= f.input :model %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= f.input :price %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>
  </div>
    <%= f.submit "Submit car", class: "btn btn-primary my-5" %>
  <% end %>
  </div>
</div>


<div id="wrapper">
  <div class="container" style="width: 400px; margin: 20px auto;">
    <h1>My Cars</h1>
  </div>
  <hr>
  <div class="container">
    <div class="row d-flex justify-content-around">
    <% @cars.each do |car| %>
        <div class="col-md-3 mx-3">
          <div class="card mb-5" style="width: 18rem; box-shadow: 1px 1px 8px #00000030;">
            <%= link_to my_car_path(car) do %>
              <%= car.photo %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title px-0"> <%= car.model %></h5>
              <div>
                <h6 class="card-text pb-0" style="float: right; font-weight: bold;"> $ <%= car.price %></h6>
              </div>
              <div class="mt-4 border-top border-dark p-0">
                <div class="d-flex">
                  <span class="card-text p-2 mx-5"><%= link_to image_tag('edit.png', width: "24px"), edit_car_path(car) %></span>
                  <div class="card-text p-2 mx-4"><%= link_to image_tag('delete.png'), car_path(car), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
